#!/usr/bin/env bash
set -e

BASE_DIR=`pwd`
BASE_NAME=${BASE_DIR##*/}
PREFIX=${BASE_NAME//_/}

function backup_one {
  docker run -v ${PREFIX}_$1:/data:ro -v `pwd`/_backup:/backup --rm busybox \
   /bin/sh -c "cd /data && tar -czf /backup/$1.tar.gz *"
}

function restore_one {
  docker run -v ${PREFIX}_$1:/data -v `pwd`/_backup:/backup --rm busybox \
    /bin/sh -c "cd /data rm -rf * && tar xfz /backup/$1.tar.gz"
}

function backup {
  for volume in `docker volume ls -q -f name=${PREFIX}_db_*`; do
    local name=${volume//${PREFIX}_/}
	echo "backing up ${name}"
	backup_one ${name}
  done
}

function restore {
  for file in _backup/*.tar.gz ; do
	local volume=${file##*/}
    name=${volume%%.*}
	echo "restoring ${name}"
	restore_one ${name}
  done
}

#command switch
case "$1" in
backup)
  shift
  if [ "$#" -ne 1 ]; then
    backup
  else
    backup_one $2
  fi
  ;;
restore)
  shift
  if [ "$#" -ne 1 ]; then
    restore
  else
    restore_one $2
  fi;;
esac

